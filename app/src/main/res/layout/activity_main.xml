<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/my_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:textSize="20dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

    <Button
        style="@style/ButtonStyle"
        android:text="@string/media_streamer"
        android:id="@+id/media_streamer_button"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/ButtonStyle"
        android:text="@string/super_duo1"
        android:id="@+id/super_duo1_button"
        android:layout_below="@+id/media_streamer_button"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/ButtonStyle"
        android:text="@string/super_duo2"
        android:id="@+id/super_duo2_button"
        android:layout_below="@+id/super_duo1_button"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/ButtonStyle"
        android:text="@string/ant_terminator"
        android:id="@+id/ant_terminator_button"
        android:layout_below="@+id/super_duo2_button"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/ButtonStyle"
        android:text="@string/materialize"
        android:id="@+id/materialize_button"
        android:layout_below="@+id/ant_terminator_button"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/ButtonStyle"
        android:background="#FF0000"
        android:text="@string/capstone"
        android:id="@+id/capstone_button"
        android:layout_below="@+id/materialize_button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
